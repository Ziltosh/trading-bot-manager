{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm run build",
        "beforeDevCommand": "pnpm run dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Trading Bot Manager",
        "version": "0.0.5"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "dialog": {
                "open": true,
                "save": true,
                "message": true
            },
            "window": {
                "setSize": true,
                "setResizable": true
            },
            "http": {
                "request": true,
                "scope": ["http://localhost:5173/*"]
            },
            "path": {
                "all": true
            },
            "fs": {
                "writeFile": true,
                "readFile": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tradingbotmanager",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/Ziltosh/trading-bot-manager/releases/download/app-v{{current_version}}/Trading.Bot.Manager_{{current_version}}_amd64.AppImage",
                "https://github.com/Ziltosh/trading-bot-manager/releases/download/app-v{{current_version}}/Trading.Bot.Manager_{{current_version}}_amd64.deb",
                "https://github.com/Ziltosh/trading-bot-manager/releases/download/app-v{{current_version}}/Trading.Bot.Manager_{{current_version}}_aarch64.dmg",
                "https://github.com/Ziltosh/trading-bot-manager/releases/download/app-v{{current_version}}/Trading.Bot.Manager_{{current_version}}_x64_setup.exe",
                "https://github.com/Ziltosh/trading-bot-manager/releases/download/app-v{{current_version}}/Trading.Bot.Manager_{{current_version}}_en-US.msi"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVGNTMxMDRFRjg4NjBERDMKUldUVERZYjRUaEJUWHhxbmIvc056SFk1QU1SYVNWME1lVndVY2g0cEU3MEp1RjFZT0dyUE1xVUcK"
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 700,
                "resizable": true,
                "title": "Trading Bot Manager",
                "width": 1000,
                "minHeight": 700,
                "minWidth": 1000
            }
        ]
    }
}
